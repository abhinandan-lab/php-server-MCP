# Root .htaccess - Serves static files and routes API calls

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Serve index.html as default
    DirectoryIndex index.html

    # If request is for /api, forward to api/index.php
    RewriteRule ^api(/.*)?$ api/index.php [QSA,L]

    # Serve static files directly (CSS, JS, images)
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # All other requests serve index.html (for SPA routing if needed)
    RewriteRule ^(.*)$ index.html [QSA,L]
</IfModule>
