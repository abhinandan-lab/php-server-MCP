{
    "name": "yourname/light-php-framework",
    "description": "Lightweight PHP Framework",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "vlucas/phpdotenv": "^5.6"
    },
     "config": {
        "optimize-autoloader": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "api/",
            "App\\Core\\": "api/core/",
            "App\\Core\\Exceptions\\": "api/core/Exceptions/",
            "App\\Controllers\\": "api/controllers/",
            "App\\Services\\": "api/services/",
            "App\\Middleware\\": "api/middleware/",
            "App\\Repository\\": "api/repository/"
        }
    }
}
