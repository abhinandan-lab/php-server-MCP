{
    "name": "your-vendor/php-light-framework",
    "description": "A lightweight PHP API framework", 
    "type": "project",
    "autoload": {
        "psr-4": {
            "App\\Controllers\\": "api/controllers/",
            "App\\Exceptions\\": "api/exceptions/",
            "App\\Core\\": "api/core/",
            "App\\": "api/"
        },
        "files": [
            "api/helpers/globalHelpers.php"
        ]
    },
    "require": {
        "php": ">=8.0",
        "vlucas/phpdotenv": "^5.4"
    },
    "config": {
        "optimize-autoloader": true
    }
}
